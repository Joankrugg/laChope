<div class="navbar navbar-expand navbar-light navbar-lewagon">
  <%= link_to "Les Créations Du Cabinet Target", root_path, class: "brand" %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.photo.present? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "https://res.cloudinary.com/da2krghvd/image/upload/v1614174132/logo_la_chope_gqgs3l.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if current_user.admin == true %>
              <%= link_to "Administration", rails_admin_path, class: "dropdown-item" %>
            <% end %>
            <%= link_to 'Concept du Cabinet', concept_path, class: 'dropdown-item' %>
            <%= link_to 'Les Target Beers', target_beers_path, class: 'dropdown-item' %>
            <%= link_to "Collection Printemps/été", spring_beers_path, class: 'dropdown-item' %>
            <%= link_to 'Collection Automne/Hiver', autumn_beers_path, class: 'dropdown-item' %>
            <%= link_to 'Designs en cours', featuring_beers_path, class: 'dropdown-item' %>
            <%= link_to 'Beers', beers_path, class: 'dropdown-item' %>
            <%= link_to 'Members', users_path, class: 'dropdown-item' %>
            <%= link_to "Profil", current_user, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Membre", new_user_session_path, class: "btn-flat" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

