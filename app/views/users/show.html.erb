            <p class='user'>à goûter très certainement</p>
            <% four_stars.each do |f| %>
              <p class='profil'><%= f %></p>
              <% @beers.each do |b| %>
                <% if f == b.style.name %>
                  <%= link_to b do %>
                    <p class='profil'><%= b.name %></p>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
