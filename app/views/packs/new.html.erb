<div class="offnavs"></div>
<div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto form">
      <h2>PACK</h2>
      <%= simple_form_for @pack do |f| %>
        <div class="form-inputs">
          <div class="col-xs-12 col-lg-8 mx-auto">
            <%= f.input :name, required: false  %>
          </div>
          <div class="col-xs-12 col-lg-8 mx-auto">
            <label class="control-label check_boxes optional">Bottle type</label>
            <input type="hidden" name="pack[bottle_id]" value="">
            <div class="bottle-available">
              <% Bottle.all.each do |bottle| %>
                <div class="col-lg-4">
                  <div class="form-check">
                    <input class="hidden" type="hidden" value="<%= bottle.id %>" name="pack[bottle_id]" id="pack_bottle_id_<%= bottle.id %>">
                    <label class="bottle-choice" for="pack_bottle_id_<%= bottle.id %>">
                      <div class="card beers-shadow">
                        <%= cl_image_tag bottle.photo.key, height: 80, width: 80, crop: :fill, class: 'beer-image card-img-top img-responsive' %>
                        <div class="card-body">
                          <h5 class="card-title"><%= bottle.name %></h5>
                          <p class="card-text"><%= bottle.centiliter %> cl</p>
                        </div>
                      </div>
                    </label>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <div class="col-xs-12 col-lg-8 mx-auto">
            <%= f.input :bottle_numbers, collection: 1..32, required: false  %>
          </div>
          <div class="infos">
            <p class='center'><%= f.button :submit, "Valider", class: "btn btn-ghost bottom" %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
$(document).ready(function () {
    $('.bottle-choice').bind('click', function() {
        // remove the active class from all elements with active class
        $('.active').removeClass('active')
        // add active class to clicked element
        $(this).addClass('active');
    });
});
</script>






