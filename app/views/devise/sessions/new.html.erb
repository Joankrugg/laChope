<div class="offnav"></div>
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-lg-4 mx-auto form-login">
        <h2>Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com", input_html: { class: "center" } %>
            <%= f.input :password, required: false, placeholder: "••••••", input_html: { class: "center" }  %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Connexion", class: "btn btn-primary" %>
          </div>
          <%= render "devise/shared/links" %>
        <% end %>
    </div>
  </div>
</div>
