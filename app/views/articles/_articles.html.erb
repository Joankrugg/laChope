<%= link_to article do  %>
  <div class="articles shadow">
    <p><%= article.title.upcase %></p>
    <%= cl_image_tag article.photo.key, height: 200, width: 300, crop: :fill, class: 'beer-image' , alt: article.title %>
    <p>Categorie: <%= article.theme.name %></p>
    <p> Auteur : <%= article.user.username %></p>
  </div>
<% end %>

