<%= link_to article do  %>
  <div class="card shadow bottom">
    <p class='center target-top-title card-text'><%= article.title.upcase %></p>
    <p class='center'> Auteur : <%= article.user.username %></p>
    <%= cl_image_tag article.photo.key, height: 200, width: 300, crop: :fill, class: 'beer-image' , alt: article.title %>
    <div class="card-infos">
      <p class='card-text center'>Categorie: <%= article.theme.name %></p>
    </div>
  </div>
<% end %>

