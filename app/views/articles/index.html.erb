<div class="offnavs"></div>
<div class="container top">
  <div class="row">
    <div class="col-12 col-lg-9">
      <div class="head">
        <h1><%= title "Tous Les Articles" %></h1>
      </div>
      <div class="page-description">
        <p>Les articles qui sont proposés ici se divisent en quatre thèmes principaux, <%= link_to 'les sciences et techniques', science_articles_path %>, <%= link_to "l'histoire" ,history_articles_path %>, les <%= link_to 'actualités', actu_articles_path %> du monde brassicole et <%= link_to "les notes d'intention", note_of_intent_articles_path %> qui accompagnent chacun des objectifs de l'atelier</p>
      </div>
      <div class="row">
        <% @articles.each do |u| %>
          <div class="col-12 col-lg-4 mx-auto">
            <%= render 'articles', article: u %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="mx-auto col-xs-8 col-sm-12 col-lg-3">
      <%= render 'shared/social-networks' %>
      <div class="card sides bottom index-side">
        <h4 class="title-top">Target</h4>
        <% @beers.each do |b| %>
          <% if b.target? %>
            <%= link_to b do %>
              <div class="beer-link card-infos">
                <p class='beer-link-text'>Nom : <%= b.name %></p>
                <p class='beer-link-text'>Style : <%= b.style.name %></p>
                <div class="line"></div><br>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <%= render 'articles/articles_side' %>
    </div>
  </div>
</div>
