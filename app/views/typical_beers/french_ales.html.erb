<div class="offnavs"></div>
<div class="container top">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-8">
      <h1 class="title card center">French Ales</h1>
      <div class="card">
        <p class='header-text'>Généreuses en alcool sans être particulièrement fortes, maltées, mise en garde (stockées), de fermentation haute. Douce et maltées en première bouche puis sèche sur la fin.</p>
      </div>
      <div class="row">
        <% fa = [] %>
        <% @typical_beers.each do |tb| %>
          <% if tb.beer_family.name == 'French Ale' %>
            <div class="mx-auto col-xs-8 col-sm-6 col-lg-6 index">
              <%= render 'typical_beer_card', typical_beer: tb %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="mx-auto col-xs-8 col-sm-12 col-lg-3 index">
      <%= render 'articles/articles_side' %>
      <%= render 'beers/ales_side' %>
      <%= render 'beers/mixed_side' %>
    </div>
  </div>
</div>
