<div class="offnavs"></div>
<div class="container top">
  <div class="row">
    <div class="col-lg-9">
      <div class="head">
        <h1>
          <%= link_to typical_beers_url do %>
            <i class="fas fa-hand-point-left"></i>
          <% end %>
          <%= @title %>
        </h1>
      </div>
      <div class="page-description">
        <p><%= @header %></p>
      </div>
      <div class="row">
        <% @typical_beers.each do |tb| %>
          <div class="mx-auto col-xs-8 col-sm-6 col-lg-6">
            <%= render 'typical_beer_card', typical_beer: tb %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="mx-auto col-xs-8 col-sm-12 col-lg-3">
      <%= render 'articles/articles_side' %>
      <%= render 'beers/ales_side' %>
      <%= render 'beers/mixed_side' %>
    </div>
  </div>
</div>
