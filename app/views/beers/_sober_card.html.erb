<%= link_to beer do  %>
  <div class="card user-beers">
    <div class="card-body">
      <h5 class="card-title"><%= beer.name.upcase %></h5>
        <% if beer.style.present? %>
          <p class='center'><%= beer.style.name %></p>
        <% else %>
          <p class='center'><%= beer.typical_beer.style.name %></p>
        <% end %>
      <p class="card-text"><%= beer.category.name %></p>
      <% if beer.user.photo.present? %>
        <%= cl_image_tag beer.photo.key, height: 70, width: 70, crop: :fill, class: "avatar-bordered-beers beer-user img-responsive" %>
      <% end %>
      <p class='center' style='color: #3C3C3C;'><%= beer.average_stars %></p>
    </div>
  </div>
<% end %>
