<%= link_to beer do  %>
  <div class="card beers-shadow">
    <%= cl_image_tag beer.photo.key, height: 200, width: 300, crop: :fill ,class: 'beer-image card-img-top img-responsive' %>
    <div class="text">Cliquez pour découvrir la recette, enregistrer une dégustation ou classer dans votre liste d'envie</div>
    <div class="card-body">
      <h5 class="card-title"><%= beer.name.upcase %></h5>
      <% if beer.style.present? %>
        <p class="card-text"><%= beer.style.name %></p>
      <% else %>
        <p class="card-text"><%= beer.typical_beer.style.name %></p>
      <% end %>
      <p class="card-text"><%= beer.typical_beer.category.name %></p>
      <p class='card-text' style='color: #3C3C3C;'><%= beer.average_stars %></p>
    </div>
  </div>
<% end %>
