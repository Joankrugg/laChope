<div class="offnavs"></div>
<% ales = [] %>
<% @beers.each do |b| %>
  <% if b.category.name == 'Ales' %>
    <% ales << b %>
  <% end %>
<% end %>
<div class="container top">
  <div class="row">
    <% ales.each do |a| %>
      <div class="mx-auto col-xs-9 col-sm-6 col-lg-4 index">
        <div class="card beers-shadow">
          <%= cl_image_tag a.photo.key, height: 200, width: 250, crop: :fill ,class: 'beer-image card-img-top img-responsive' %>
          <div class="card-body">
            <h4 class="card-title"><%= a.name.upcase %></h4>
            <p class="card-text"><%= a.style.name %></p>
            <p class="card-text"><%= a.category.name %></p>
            <% if a.user.photo.present? %>
              <%= cl_image_tag a.user.photo.key, height: 70, width: 70, crop: :fill, class: "avatar-bordered-beers beer-user img-responsive" %>
            <% end %>
            <div class="middle">
              <%= link_to a do %>
                <p class="btn btn-ghost"> Description </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
