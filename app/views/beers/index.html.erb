<div class="offnav"></div>
<div class="container">
  <div class="row">
    <% @beers.each do |b| %>
      <div class="col-xs-6 col-sm-6 col-lg-3">
        <div class="card beers-shadow ">
          <%= cl_image_tag b.photo.key, class: 'card-img-top img-responsive', height: '200px', width: '180', alt: 'Card image' %>
          <div class="card-body">
            <h4 class="card-title"><%= b.name%></h4>
            <p class="card-text"><%= b.style.name %></p>
            <%= link_to b do %>
              <p class="btn btn-primary"> En Savoir Plus </p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
