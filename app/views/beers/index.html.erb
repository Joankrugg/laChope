<div class="offnavs"></div>
<div class="container top">
  <% lagers = [] %>
  <% ales = [] %>
  <% mixed_styles = [] %>
  <% @beers.each do |b| %>
    <% if b.category.name == 'Lagers'%>
      <% lagers << b %>
    <% elsif b.category.name == 'Ales'%>
      <% ales << b %>
    <% else %>
      <% mixed_styles << b %>
    <% end %>
  <% end %>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-lg-1"></div>
      <div class="col-xs-12 col-sm-12 col-lg-8">
        <div class="card space">
          <h1 class='page-title center'>Toutes Les Bi√®res</h1>
        </div>
        <% if lagers != [] %>
          <div class="card">
            <%= link_to lagers_beers_path do  %>
              <h2 class='page-title center'>Lagers</h2>
            <% end %>
          </div>
          <div class="row">
            <% lagers.each do |b| %>
              <div class="mx-auto col-xs-8 col-sm-6 col-lg-6 index">
                <%= render 'beer_card', beer: b %>
              </div>
            <% end %>
          </div>
        <% end %>

        <% if ales != [] %>
          <div class="card">
            <%= link_to ales_beers_path do  %>
              <h2 class='page-title center'>Ales</h2>
            <% end %>
          </div>
          <div class="row">
            <% ales.each do |b| %>
              <div class="mx-auto col-xs-8 col-sm-6 col-lg-6 index">
                <%= render 'beer_card', beer: b %>
              </div>
            <% end %>
          </div>
        <% end %>

        <% if mixed_styles != [] %>
          <div class="card">
            <%= link_to mixed_beers_path do  %>
              <h2 class='page-title center'>Styles Mixtes</h2>
            <% end %>
          </div>
          <div class="row">
            <% mixed_styles.each do |b| %>
              <div class="mx-auto col-xs-8 col-sm-6 col-lg-6 index">
                <%= render 'beer_card', beer: b %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="mx-auto col-xs-8 col-sm-12 col-lg-3 index">
        <%= render 'shared/social-networks' %>
        <div class="card sides bottom index-side">
          <h4 class="title-top">TARGET</h4>
          <% @beers.each do |b| %>
            <% if b.target? %>
              <%= link_to b do %>
                <div class="beer-link card-infos">
                  <p class='beer-link-text'>Nom : <%= b.name %></p>
                  <p class='beer-link-text'>Style : <%= b.style.name %></p>
                  <div class="line"></div><br>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <div class="card sides top bottom">
          <h4 class="title-top">A Lire</h4>
          <% @articles.each do |a| %>
            <%= link_to a do %>
              <div class="row article-link card-infos">
                <div class="col-lg-4"><%= cl_image_tag a.photo.key, class: 'avatar-square img-fluid' %></div>
                <div class="col-lg-8">
                  <p class='article-link-text'><%= a.title %></p>
                  <p class='article-link-text'><%= a.theme.name %></p>
                  <p class='article-link-text'><%= a.created_at.strftime("%d/%m/%Y") %> </p>
                  <div class="line center"></div><br>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
