<div class="offnavs"></div>
<div class="container top">
  <% lagers = [] %>
  <% ales = [] %>
  <% mixed_styles = [] %>
  <% @beers.each do |b| %>
    <% if b.category.name == 'Lagers'%>
      <% lagers << b %>
    <% elsif b.category.name == 'Ales'%>
      <% ales << b %>
    <% else %>
      <% mixed_styles << b %>
    <% end %>
  <% end %>
    <div class="row">
      <div class="col-lg-1"></div>
      <div class="col-lg-8">
        <% if lagers != [] %>
          <h2 class='center'>Lagers</h2>
          <div class="row">
            <% lagers.each do |b| %>
              <div class="mx-auto col-xs-9 col-sm-6 col-lg-6 index">
                <div class="card beers-shadow">
                  <%= cl_image_tag b.photo.key, height: 200, width: 250, crop: :fill ,class: 'beer-image card-img-top img-responsive' %>
                  <div class="card-body">
                    <h4 class="card-title"><%= b.name.upcase %></h4>
                    <p class="card-text"><%= b.style.name %></p>
                    <p class="card-text"><%= b.category.name %></p>
                    <% if b.user.photo.present? %>
                      <%= cl_image_tag b.user.photo.key, height: 70, width: 70, crop: :fill, class: "avatar-bordered-beers beer-user img-responsive" %>
                    <% end %>
                    <div class="middle">
                      <%= link_to b do %>
                        <p class="btn btn-ghost"> Description </p>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <% if ales != [] %>
          <h2 class='center'>Ales </h2>
          <div class="row">
            <% ales.each do |b| %>
              <div class="mx-auto col-xs-6 col-sm-6 col-lg-6 index">
                <div class="card beers-shadow ">
                  <%= cl_image_tag b.photo.key, height: 200, width: 250, crop: :fill ,class: 'beer-image card-img-top img-responsive' %>
                  <div class="card-body">
                    <h4 class="card-title"><%= b.name.upcase %></h4>
                    <p class="card-text"><%= b.style.name %></p>
                    <p class="card-text"><%= b.category.name %></p>
                    <% if b.user.photo.present? %>
                      <%= cl_image_tag b.user.photo.key, height: 70, width: 70, crop: :fill, class: "avatar-bordered-beers beer-user img-responsive" %>
                    <% end %>
                    <div class="middle">
                      <%= link_to b do %>
                        <p class="btn btn-ghost"> Description </p>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <% if mixed_styles != [] %>
          <h2 class='center'>Mixed Styles</h2>
          <div class="row">
            <% mixed_styles.each do |b| %>
              <div class="mx-auto col-xs-6 col-sm-6 col-lg-6 index">
                <div class="card beers-shadow ">
                  <%= cl_image_tag b.photo.key, height: 200, width: 250, crop: :fill ,class: 'beer-image card-img-top img-responsive' %>
                  <div class="card-body">
                    <h4 class="card-title"><%= b.name.upcase %></h4>
                    <p class="card-text"><%= b.style.name %></p>
                    <p class="card-text"><%= b.category.name %></p>
                    <% if b.user.photo.present? %>
                      <%= cl_image_tag b.user.photo.key, height: 70, width: 70, crop: :fill, class: "avatar-bordered-beers beer-user img-responsive" %>
                    <% end %>
                    <div class="middle">
                      <%= link_to b do %>
                        <p class="btn btn-ghost"> Description </p>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="col-lg-3">
        <h2 class='center'>A DÃ©couvrir</h2>
        <div class="card sides bottom index-side">
          <h4 class="title-top">ALES</h4>
          <% ales = [] %>
          <% @beers.each do |b| %>
            <% if b.category.name == 'Ales' %>
              <% ales << b %>
            <% end %>
          <% end %>
          <% ales.each do |t| %>
            <%= link_to t do %>
              <div class="beer-link">
                <p class='beer-link-text'>Nom : <%= t.name %></p>
                <p class='beer-link-text'>Style : <%= t.style.name %></p>
                <div class="line"></div><br>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="card sides top">
          <h4 class="title-top">A Lire</h4>
          <% @articles.each do |a| %>
            <%= link_to a do %>
              <div class="row article-link">
                <div class="col-lg-4"><%= cl_image_tag a.photo.key, class: 'avatar-square img-fluid' %></div>
                <div class="col-lg-8">
                  <p class='article-link-text'><%= a.title %></p>
                  <p class='article-link-text'><%= a.theme.name %></p>
                  <p class='article-link-text'><%= a.created_at.strftime("%d/%m/%Y") %> </p>
                  <div class="line center"></div><br>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
