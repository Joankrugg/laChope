<div class="container top">
  <div class="card-product">
    <%= cl_image_tag @beer.photo.key %>
    <div class="card-product-infos">
      <%= @beer.name %>
      <%= @beer.style.name %>
      <%= @beer.alcohol_level %>
      <%= @beer.color %>
      <%= @beer.bitterness %>
      <%= @beer.description %>
      <% if @beer.user == current_user %>
        <%= link_to 'edit', edit_beer_path(@beer) %>
      <% end %>
    </div>
  </div>
</div>



