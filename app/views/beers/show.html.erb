<div class="offnav"></div>

<div class="container top">
  <div class="card-product">
    <%= cl_image_tag @beer.photo.key %>
    <div class="card-product-infos">
      <%= @beer.name %>
      <%= @beer.style.name %>
      <%= @beer.alcohol_level %>
      <%= @beer.color %>
      <%= @beer.bitterness %>
      <%= @beer.description %>
      <% if @beer.user == current_user %>
        <%= link_to 'edit', edit_beer_path(@beer) %>
      <% end %>
    </div>
  </div>
</div>


<div class="container top bottom">
  <h2>Recette</h2>
  <%= link_to 'écrire une étape', new_beer_recipe_path(@beer) %>

  <% s = @beer.recipes.sort_by { |step| step[:step] } %>

  <% s.each do |r| %>
    <%= link_to edit_beer_recipe_path(@beer, r) do %>
      <div class="row steps">
        <p><%= r.step %> - <%= r.action.name %>
          <% if r.quantity.present? %>
            <%= r.quantity %>
          <% end %>
          <% if r.unit.present? %>
            <%= r.unit.name %>
          <% end %>
          <% if r.product_type.present? %>
            <%= r.product_type.name %>
          <% end %>
          <% if r.product.present? %>
             <%= r.product %>
          <% end %>
          <% if r.duration.present? %>
            pendant <%= r.duration %>
          <% end %>
          <% if r.duration_unit.present? %>
             <%= r.duration_unit.name %>
          <% end %>
          <% if r.temperature.present? %>
            à <%= r.temperature %> °C </p>
          <% end %>
      </div>
    <% end %>
  <% end %>
</div>


