<div class="card sides top bottom shadow">
  <% mixed_styles = [] %>
  <h4 class="title-top">Styles Hybrides</h4>
  <% @beers.each do |b| %>
    <% if b.typical_beer.category.name == 'Mixed Styles' %>
      <% mixed_styles << b %>
    <% end %>
  <% end %>
  <% mixed_styles.each do |t| %>
    <%= link_to t do %>
      <div class="beer-link card-infos">
        <p class='beer-link-text'>Nom : <%= t.name %></p>
        <% if t.style.present? %>
          <p class="beer-link-text"><%= t.style.name %></p>
        <% else %>
          <p class="beer-link-text"><%= t.typical_beer.style.name %></p>
        <% end %>
        <div class="line"></div><br>
      </div>
    <% end %>
  <% end %>
</div>
