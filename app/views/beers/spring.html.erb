<div class="offnav"></div>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  Collection Printemps/été
</div>

<% @beers.each do |b| %>
  <% if b.category.name == "Collection Printemps/été" %>
    <div class="card beers-shadow">
      <div class="user-card"><%= cl_image_tag b.photo.key, class: "img-fluid" %></div>
      <div class="card-product-infos">
        <h2><%= b.name %></h2>
        <p><%= b.description %></p>
      </div>
    </div>
  <% end %>
<% end %>
