<div class="card shadow">
  <h5 class='center target-top-title'><%= beer.name.upcase %></h5>
  <%= link_to beer.typical_beer do  %>
    <p class='center'> | <%= beer.typical_beer.name %> | </p>
  <% end %>
  <%= cl_image_tag beer.photo.key, class: 'card-img-top img-responsive beer-image' %>
  <div class="card-infos">
    <p class='card-text center'>Categorie: <%= beer.typical_beer.category.name %></p>
    <% if beer.alcohol_shape.present? && beer.alcohol_shape.name != beer.typical_beer.alcohol_shape.name %>
      <p class='card-text center'>Alcool: <%= beer.alcohol_shape.name %></p>
    <% else %>
      <p class='card-text center'>Alcool: <%= beer.typical_beer.alcohol_shape.name %></p>
    <% end %>
    <% if beer.design_color.present? && beer.design_color.name != beer.typical_beer.design_color.name %>
      <p class='card-text center'>Robe: <%= beer.design_color.name %></p>
    <% else %>
      <p class='card-text center'>Robe: <%= beer.typical_beer.design_color.name %></p>
    <% end %>
    <% if beer.balance.present? && beer.balance.name != beer.typical_beer.balance.name %>
      <p class='card-text center'>Equilibre: <%= beer.balance.name %></p>
    <% else %>
      <p class='card-text center'>Ã‰quilibre: <%= beer.typical_beer.balance.name %></p>
    <% end %>
    <p class='card-text center'>Moyenne des notes: <%= beer.average_stars %></p>
  </div>
</div>
