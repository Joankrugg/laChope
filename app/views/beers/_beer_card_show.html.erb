<div class="card shadow">
  <p class='center target-top-title card-text'><%= beer.name.upcase %></p>
  <% if beer.style.present? %>
    <p class='center'><%= beer.style.name %> | by : <%= beer.user.username %></p>
  <% else %>
    <p class='center'><%= beer.typical_beer.style.name %> | by : <%= beer.user.username %></p>
  <% end %>
  <%= cl_image_tag beer.photo.key, height: 300, width: 400, crop: :fill, class: 'card-img-top img-responsive beer-image' %>
  <div class="card-infos">
    <p class='card-text center'>Category: <%= beer.typical_beer.category.name %></p>
    <p class='card-text center'>Alcool: <%= beer.typical_beer.alcohol_shape.name %></p>
    <p class='card-text center'>Color: <%= beer.typical_beer.design_color.name %> EBC</p>
    <p class='card-text center'>Bitterness: <%= beer.typical_beer.balance.name %> IBU</p>
    <p class='card-text center'>Moyenne des notes: <%= beer.average_stars %></p>
  </div>
</div>
