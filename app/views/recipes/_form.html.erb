<div class="offnavs"></div>
<div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto form">
      <h2>Recipe</h2>
      <%= simple_form_for [ @beer, @recipe ] do |f| %>
        <div class="form-inputs">
          <div class="row">
            <div class="col-lg-6"><%= f.input :step, required: false, input_html: { min: '1'} %></div>
            <div class="col-lg-6"><%= f.association :action, required: false %></div>
          </div>
          <div class="row">
            <div class="col-lg-6"><%= f.association :product_type %></div>
            <div class="col-lg-6"><%= f.input :product %></div>
          </div>
          <div class="row">
            <div class="col-lg-6"><%= f.input :quantity, input_html: { min: '1'} %></div>
            <div class="col-lg-6"><%= f.association :unit %></div>
          </div>
          <div class="row">
            <div class="col-lg-6"><%= f.input :duration, input_html: { min: '1'} %></div>
            <div class="col-lg-6"><%= f.association :duration_unit %></div>
          </div>
            <%= f.input :temperature, input_html: { min: '0'}  %>
          <div class="infos">
            <%= f.button :submit, "Valider l'Ã©tape", class: "btn btn-flat log"  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
