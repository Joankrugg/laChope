<%= simple_form_for @newsletter do |f| %>
  <div class="row">
    <div class="col-7 col-lg-6 mx-auto">
      <h4 style="margin-top: 10px; color: white;">recevoir la newsletter</h4>
      <%= f.input :email %>
    </div>
    <div class="col-4 col-lg-2 mx-auto newsletter-button">
      <%= f.button :submit, 'valider', class: "btn btn-mobile" %>
    </div>
  </div>
<% end %>
