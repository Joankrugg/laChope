<div class="offnavs"></div>
<div class="container">
  <div class="layer">
    <button type="button" class="btn-modern" data-toggle="modal" data-target="#feed-modal" id='share'>
      Launch demo modal
    </button>
  </div>

  <div class="row">
    <% @feeds.each do |f| %>
      <div class="col-3 col-sm-3 col-md-2 col-lg-2 mx-auto feed-place">
        <div class="truth">
          <%= cl_image_tag f.photo.key, height:300, width:300, crop: :fill, class: 'img-fluid images-feed' %>
          <div class="truth-layer"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
