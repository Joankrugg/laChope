<div class="offnav"></div>
  <!-- Masthead -->
<header class="masthead text-white text-center">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-xl-9 mx-auto">
        <h1 class="home-title">Atelier Target</h1>
        <h2 class="slogan">Brassins Artistiques Sur-mesure</h2>
        <div><%= link_to 'Commençons par une recherche', new_public_search_path, class: 'btn btn-ghost' %></div>
      </div>
    </div>
  </div>
</header>

<!-- Icons Grid -->
<section class="features-icons bg-light text-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
          <div class="features-icons-icon d-flex ">
            <i class="fas fa-beer m-auto" aria-hidden="true"></i>
          </div>
          <h3 class='goodies'>Découvrir son style de bière</h3>
          <p>Remplissez des critères subjectifs sur votre compte et retrouvez des exemples commerciaux ou targets qui correspondent à vos goûts </p>
          <%= link_to "Créer un compte", new_user_registration_path, class: 'btn btn-ghost' %>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
          <div class="features-icons-icon d-flex">
            <i class="fa fa-cogs m-auto" aria-hidden="true"></i>
          </div>
          <h3 class='goodies'>Découvrez des projets et leurs recettes </h3>
          <p>Les 'targets beers' sont les projets de l'atelier target, vous découvrirez le packaging, la recette, le résultat et les notes de dégustations</p>
          <%= link_to "Créer un compte", new_user_registration_path, class: 'btn btn-ghost' %>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="features-icons-item mx-auto mb-0 mb-lg-3">
          <div class="features-icons-icon d-flex">
            <i class="fas fa-heart m-auto" aria-hidden="true"></i>
          </div>
          <h3 class='goodies'>Créez des projets individualisés</h3>
          <p>Vous souhaitez créer un projet pour l'atelier, choisissez votre étiquette ou déposez la, choisissez le contenant la capsule et décrivez vos critères</p>
          <%= link_to "Créer un compte", new_user_registration_path, class: 'btn btn-ghost' %>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="container top">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-lg-12">
      <h2 class='subtitle center'>Quelques Targets...</h2>
      <div class="row">
        <% @beers.sample(3).each do |b| %>
          <div class="mx-auto col-xs-8 col-sm-6 col-lg-4">
            <%= link_to b do %>
              <div class="card beers-shadow">
                <%= cl_image_tag b.photo.key, height: 200, width: 300, crop: :fill ,class: 'beer-image card-img-top img-responsive' %>
                <div class="card-body">
                  <h5 class="card-title"><%= b.name.upcase %></h5>
                  <p class="card-text"><%= b.style.name %></p>
                  <p class="card-text"><%= b.category.name %></p>
                  <% if b.user.photo.present? %>
                    <%= cl_image_tag b.user.photo.key, height: 70, width: 70, crop: :fill, class: "avatar-bordered-beers beer-user img-responsive" %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Image Showcases -->
<section class="showcase top">
  <div class="container-fluid p-0">
    <div class="row no-gutters">
      <div class="col-lg-6 my-auto showcase-text">
        <h2 class="subtitle">Devenez membre</h2>
        <p class="lead mb-0">Participez à l'élaboration de brassins uniques que vous soyez amateur, brasseur ou professionnel intéressé par la production d'un produit unique</p>
      </div>
      <div class="col-lg-6 order-lg-2 text-white showcase-img"> <%= cl_image_tag 'https://res.cloudinary.com/da2krghvd/image/upload/s--7g0Mk4Xx--/q_jpegmini/v1622028429/shutterstock-1212903172-1600x900_esy1fx.jpg', height: 800, width: 800, crop: :fill, class: 'img-fluid' %>
      </div>
    </div>
    <div class="row no-gutters">
      <div class="col-lg-6 text-white showcase-img"> <%= cl_image_tag 'https://res.cloudinary.com/da2krghvd/image/upload/s--NICCEFkf--/q_jpegmini/v1622028586/glass-cold-beer-bottoms-up-with-beautiful-bokeh-friends-drink-beer-together-dark-tone_34939-279_ldvuqt.jpg', height: 800, width: 800, crop: :fill, class: 'img-fluid'%></div>
