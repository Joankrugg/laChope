<%= simple_form_for @design do |f| %>
  <div class="form-inputs">
    <div class="center">
      <%= f.association :category, as: :radio_buttons,
        input_html: { class: "tag-selector" },
        item_wrapper_class: 'tag-item' %>
    </div>
    <div class="center">
      <%= f.association :balance, as: :radio_buttons,
        input_html: { class: "tag-selector" },
        item_wrapper_class: 'tag-item' %>
    </div>
    <div class="center">
      <%= f.association :alcohol_shape, as: :radio_buttons,
        input_html: { class: "tag-selector" },
        item_wrapper_class: 'tag-item' %>
    </div>
    <div class="center">
      <%= f.association :design_color, as: :radio_buttons,
        input_html: { class: "tag-selector" },
        item_wrapper_class: 'tag-item' %>
    </div>
    <div class="center">
      <%= f.association :main_taste, as: :radio_buttons,
          input_html: { class: "tag-selector" },
          item_wrapper_class: 'tag-item' %>
    </div>
    <div class="center">
      <%= f.association :feelings, as: :check_boxes,
                    input_html: { class: "tag-selector" },
                    item_wrapper_class: 'tag-item' %>
    </div>
    <div class="center">
      <%= f.association :flavours, as: :check_boxes,
                    input_html: { class: "tag-selector" },
                    item_wrapper_class: 'tag-item' %>
    </div>
    <div class="infos">
      <p class='center'><%= f.button :submit, "Valider", class: "btn btn-ghost bottom" %></p>
    </div>
  </div>
<% end %>
