<div class="offnav bottom"></div>
<div class="container top">
  <div class="row">
    <div class="mx-auto">
      <div class="card beers-shadow">
        <%= cl_image_tag @project.pack.bottle.photo.key, height: 200, width: 300, crop: :fill ,class: 'beer-image card-img-top img-responsive' %>
        <div class="card-body">
          <h5 class="card-title"><%= @project.name.upcase %></h5>
          <p class="card-text"><%= @project.typical_beer.category.name %></p>
          <p class="card-text"><%= @project.typical_beer.style.name %></p>

          <% if @project.user.photo.present? %>
            <%= cl_image_tag @project.user.photo.key, height: 70, width: 70, crop: :fill, class: "avatar-bordered-beers beer-user img-responsive" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
